<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Listening"
        android:id="@+id/button"
        android:layout_below="@+id/button_send_4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Signal 1"
        android:id="@+id/button_send_1"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Signal 2"
        android:id="@+id/button_send_2"
        android:layout_below="@+id/button_send_1"
        android:layout_alignEnd="@+id/button_send_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Signal 3"
        android:id="@+id/button_send_3"
        android:layout_below="@+id/button_send_2"
        android:layout_alignStart="@+id/button_send_4"
        android:layout_marginTop="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Signal 4"
        android:id="@+id/button_send_4"
        android:layout_below="@+id/button_send_3"
        android:layout_alignEnd="@+id/button_send_toggle_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Toggle 1"
        android:id="@+id/button_send_toggle_1"
        android:layout_below="@+id/button_send_2"
        android:layout_alignEnd="@+id/button_send_2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Toggle 2"
        android:id="@+id/button_send_toggle_2"
        android:layout_below="@+id/button_send_4"
        android:layout_alignEnd="@+id/button_send_4" />
</RelativeLayout>
